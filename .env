# OWASP WSTG Framework - Variables de Entorno
# Configuración principal del framework

# ==============================================
# CONFIGURACIÓN DEL FRAMEWORK
# ==============================================
WSTG_HOME=/opt/owasp-wstg-framework
WSTG_VERSION=2.0.0
WSTG_LOG_LEVEL=INFO
WSTG_MAX_CONCURRENT=5
WSTG_DEBUG=false

# ==============================================
# RUTAS Y DIRECTORIOS
# ==============================================
WSTG_DB_PATH=./data/wstg.db
WSTG_REPORTS_DIR=./reports
WSTG_LOGS_DIR=./logs
WSTG_TEMP_DIR=./temp
WSTG_CONFIG_DIR=./config

# ==============================================
# CONFIGURACIÓN DE BASE DE DATOS
# ==============================================
DB_TYPE=sqlite
DB_HOST=localhost
DB_PORT=5432
DB_NAME=wstg_framework
DB_USER=wstg_user
DB_PASSWORD=wstg_secure_password

# ==============================================
# CONFIGURACIÓN DE WEB DASHBOARD
# ==============================================
WSTG_DASHBOARD_HOST=127.0.0.1
WSTG_DASHBOARD_PORT=8080
WSTG_DASHBOARD_SECRET_KEY=wstg-framework-secret-change-me-in-production
WSTG_SESSION_TIMEOUT=3600

# ==============================================
# API KEYS - CONFIGURAR SEGÚN NECESIDAD
# ==============================================
# VirusTotal API (https://virustotal.com/)
WSTG_VIRUSTOTAL_API=your_api_key_here

# Shodan API (https://shodan.io/)
WSTG_SHODAN_API=your_api_key_here

# PassiveTotal API (https://www.passivetotal.org/)
WSTG_PASSIVETOTAL_API=your_api_key_here
WSTG_PASSIVETOTAL_USER=your_user_key_here

# URLVoid API (http://www.urlvoid.com/)
WSTG_URLVOID_API=your_api_key_here

# OTX API (https://otx.alienvault.com/)
WSTG_OTX_API=your_api_key_here

# ==============================================
# CONFIGURACIÓN DE PROXY (OPCIONAL)
# ==============================================
WSTG_HTTP_PROXY=""
WSTG_HTTPS_PROXY=""
WSTG_NO_PROXY="localhost,127.0.0.1"

# ==============================================
# CONFIGURACIÓN DE EMAIL (OPCIONAL)
# ==============================================
WSTG_SMTP_SERVER=smtp.gmail.com
WSTG_SMTP_PORT=587
WSTG_EMAIL_USERNAME=""
WSTG_EMAIL_PASSWORD=""
WSTG_EMAIL_FROM=""
WSTG_EMAIL_TO=""

# ==============================================
# CONFIGURACIÓN DE SEGURIDAD
# ==============================================
WSTG_MAX_REQUESTS_PER_SECOND=10
WSTG_CONNECTION_TIMEOUT=30
WSTG_READ_TIMEOUT=60
WSTG_VERIFY_SSL=true

# ==============================================
# CONFIGURACIÓN DE NOTIFICACIONES (OPCIONAL)
# ==============================================
# Slack webhook
WSTG_SLACK_WEBHOOK=""
WSTG_SLACK_CHANNEL="#security-alerts"

# Discord webhook
WSTG_DISCORD_WEBHOOK=""

# ==============================================
# LÍMITES DE RENDIMIENTO
# ==============================================
WSTG_MAX_MEMORY_MB=2048
WSTG_THREAD_POOL_SIZE=10
WSTG_CACHE_ENABLED=true
WSTG_CACHE_TTL=3600

# ==============================================
# CONFIGURACIÓN DE HERRAMIENTAS
# ==============================================
WSTG_NMAP_PATH=/usr/bin/nmap
WSTG_NIKTO_PATH=/usr/bin/nikto
WSTG_SQLMAP_PATH=/usr/bin/sqlmap
WSTG_GOBUSTER_PATH=/usr/bin/gobuster
WSTG_HYDRA_PATH=/usr/bin/hydra
WSTG_ZAP_PATH=/usr/bin/zaproxy
WSTG_CHROMEDRIVER_PATH=/usr/local/bin/chromedriver

# ==============================================
# CONFIGURACIÓN DE WORDLISTS
# ==============================================
WSTG_WORDLIST_COMMON=/usr/share/wordlists/dirb/common.txt
WSTG_WORDLIST_DIRBUSTER=/usr/share/wordlists/dirbuster/directory-list-2.3-medium.txt
WSTG_WORDLIST_ROCKYOU=/usr/share/wordlists/rockyou.txt

# ==============================================
# CONFIGURACIÓN DE TESTING Y DESARROLLO
# ==============================================
WSTG_TEST_MODE=false
WSTG_MOCK_APIS=false
WSTG_SAFE_TARGETS=http://httpbin.org,https://scanme.sh

# ==============================================
# CONFIGURACIÓN AVANZADA
# ==============================================
# Features experimentales
WSTG_ML_DETECTION=false
WSTG_AUTO_REPORTS=false
WSTG_REAL_TIME_MONITORING=false

# Plugins y módulos personalizados
WSTG_CUSTOM_MODULES_DIR=./custom_modules
WSTG_PLUGINS_DIR=./plugins

# ==============================================
# NOTAS DE SEGURIDAD
# ==============================================
# 1. CAMBIAR SECRET_KEY antes de producción
# 2. NO subir este archivo con API keys reales a repositorios
# 3. USAR variables de entorno para datos sensibles
# 4. CONFIGURAR permisos adecuados: chmod 600 .env
# ==============================================